<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Landing Page</title>
  <link rel="stylesheet" href="/css/styles.css">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">

</head>
<body class="light-mode">
  <button class="toggle-btn" onclick="toggleTheme()">
    <i id="mode-icon" class="fas fa-sun"></i> <!-- Default to Sun icon for light mode -->
  </button>

  <div class="landing-page">
    <h2>Welcome to Our Website</h2>
    <div class="button-container">
      <a href="/login" class="button-link">Login</a>
      <a href="/signup" class="button-link signup-btn">Signup</a>
    </div>
  </div>


  <script>
    function toggleTheme() {
      const body = document.body;
      const icon = document.getElementById('mode-icon');
      const currentMode = body.classList.contains('light-mode') ? 'light' : 'dark';
      
      if (currentMode === 'light') {
        body.classList.remove('light-mode');
        body.classList.add('dark-mode');
        icon.classList.remove('fa-sun');
        icon.classList.add('fa-moon');
      } else {
        body.classList.remove('dark-mode');
        body.classList.add('light-mode');
        icon.classList.remove('fa-moon');
        icon.classList.add('fa-sun');
      }
    }
  </script>
</body>
</html>
